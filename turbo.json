{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "globalEnv": ["VITE_APP_PORT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "env": ["VITE_APP_PORT"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "env": ["VITE_APP_PORT"]
    },
    "lint": {
      "dependsOn": ["^lint", "^build"],
      "env": ["VITE_APP_PORT"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["VITE_APP_PORT"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
